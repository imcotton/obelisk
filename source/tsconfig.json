{
    "compilerOptions": {
        "target": "es2018",
        "outDir": "../dist",
        "moduleResolution": "node",
        "module": "es2015",
        "allowJs": true,
        "declaration": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,

        "strict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "pretty": true
    },

    "filesGlob": [
        "**/*.ts"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ],

    "types": [
    ],

    "compileOnSave": false
}
